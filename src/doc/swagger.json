    "/posts/{id}/comments": {
      "get": {
        "tags": ["Post"],
        "summary": "Get All Post Comments",
        "description": "Get Post Comments",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Post ID",
            "required": true
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limit per page",
            "default": 10
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Skip number of",
            "default": 0
          }
        ],
        "responses": {
          "200": {
            "description": "Single Post Comments",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Comment"
                }
              }
            }
          },
          "404": {
            "content": {
